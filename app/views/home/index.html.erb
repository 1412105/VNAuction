<div class="home-first"  style="background-color: #8cb5e8;">
	<span class="col-md-12 home-Label">Shopping offer - Free ship for our customer service only from 29.000 vnd</span>
</div>

<div class="row">
  <% @products.reverse_each do |product| %>
    <div class="product-home">
      <div class="">
        <div>
          <div >
            <img src=<%= product.image.url %> alt="Smiley face" width="300" height="300">
          </div>
		  <% else %>
		  <div >
			<img src="../../public/package.png" alt="Smiley face" width="300" height="300">
		  </div>
		  <% end %>
          <div >
            <h4 class="">
              <%= link_to product_path(product.id), class: "" do %>
                <%= product.name %> (<%= product.status %>)
              <% end %>    
            </h4>
            <p> Time left: <div id=clock<%= product.id %> ></div>   </p>

          </div>
          <div >
            <h4 class="">PRICE: <%= product.current_price %>$</h4>
          </div>
  	  </div>
    </div>
    <script type="text/javascript">
      var id_cl = '#clock' + <%= product.id %>;
      var time = new Date("<%= (product.end_time.in_time_zone('Hanoi')- 15.hours).strftime("%Y-%m-%d %H:%M:%S") %>");
       $(id_cl).countdown(time, function(event) {
         var totalHours = event.offset.totalDays * 24 + event.offset.hours;
        $(this).html(event.strftime(totalHours + ' hr %M min %S sec'));
      });
    </script>
  <% end %>
</div>
