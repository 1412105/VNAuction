<%= render partial: 'flash_message', locals: {messages: flash} %>
<div class="login-form">
	<div>
		<div class="row">
		  <div class="col-md-12 login-label">
		  	<h1>Log in</h1>
		  </div>
		</div>

		<div class="row">
			<div class="col-md-12">
				<%= form_with scope: :session, local:true do |f| %>
				<div class="form-group">
				<%= f.text_field :email, class: " input form_control", placeholder: "Email" %> 
				</div>

				<div class="form-group">
				<%= f.password_field :password, class: " input form_control", placeholder: "Password" %>      
				</div>
				<button type="submit" class="btnlogin btn btn-success">Log in</button>
				<div style="width: 100%;">
					<%=link_to "Register new account", new_user_path %>
				</div>
				<%end%>
			</div>

		</div>
	</div>
</div>