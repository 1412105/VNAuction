<div class="container">
    <h1>Edit Profile</h1>
  	<hr>
	<div class="row">

      <!-- edit form column -->
      <div class="personal-info">
        <div class="alert alert-info alert-dismissable">
          <a class="panel-close close" data-dismiss="alert">Ã—</a>
          <strong>You have to confnfirm your old pasword to change..!</strong>
        </div>
        <h3>Personal info</h3>
        <%= form_with scope: :edit_profile, class: "form-horizontal", local: true do |f| %>
        <div class="col-md-3">
          <div class="text-center form-group">
              <% if @user.avatar? %>
                <%= image_tag @user.avatar.url, class: "avatar img-circle", alt: "avatar" %>
              <% else %>
                <img src="//placehold.it/200" class="avatar img-circle" alt="avatar">
              <% end %>
            <h6>Upload a different photo...</h6>
            <%= f.file_field :avatar, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-9">
            <div class="form-group">
              <label class="col-lg-3 control-label">Name</label>
              <div class="col-lg-8">
                <%= f.text_field :name, class: "form-control", value: @user.name %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-lg-3 control-label">Email</label>
              <div class="col-lg-8">
                <%= f.text_field :email, class: "form-control", value: @user.email %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-lg-3 control-label">Address</label>
              <div class="col-lg-8">
                  <%= f.text_field :address, class: "form-control", value: @user.address %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-lg-3 control-label">New Password</label>
              <div class="col-lg-8">
                  <%= f.text_field :new_password, class: "form-control"%>
              </div>
            </div>
            <div class="form-group">
              <label class="col-lg-3 control-label">Confirm New Password</label>
              <div class="col-lg-8">
                  <%= f.text_field :confirm_new_password, class: "form-control"%>
              </div>
            </div>
            <div class="form-group">
              <label class="col-lg-3 control-label">Confirm Old Password</label>
              <n style="color: red;">(*)</n>
              <div class="col-lg-8">
                  <%= f.text_field :confirm_old_password, class: "form-control"%>
              </div>
            </div>
            <div class="form-group">
              <label class="col-md-3 control-label"></label>
              <div class="col-md-8">
                <input type="submit" class="btn btn-primary" value="Save Changes">
                <span></span>
                <input type="reset" class="btn btn-default" value="Cancel">
              </div>
            </div>
        </div>
        <% end %>
      </div>
  </div>
</div>
<hr>
